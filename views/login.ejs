    <section class="login">
        <h1 style="text-align: center;margin-top: -30px; margin-bottom: 10px; font-size: 27px;">Welcome to Journal!</h1>
        <div class="log">
            <form method="POST" action="/login" id="login-form" class="login-form">
             

              <h1 class="a11y-hidden">Login Form</h1>
                <div>
                  <label class="label-email">
                    <input  type="email" class="text" name="email" placeholder="Email" required />
                    <span class="required">Email</span>
                  </label>
                </div>
              
               
                <div>
                  <label class="label-password">
                    <input type="password" class="pass" name="password" placeholder="Password"  required />
                    <span class="required">Password</span>
                  </label>
                </div>
                <button type="submit" >Login</button> 
                <div class="email">
                  <a href="/">New to this Journal</a>
                </div>
                <figure aria-hidden="true">
                  <div class="person-body"></div>
                  <div class="neck skin"></div>
                  <div class="head skin">
                    <div class="eyes"></div>
                    <div class="mouth"></div>
                  </div>
                  <div class="hair"></div>
                  <div class="ears"></div>
                  <div class="shirt-1"></div>
                  <div class="shirt-2"></div>
                </figure>
              </form>
                          
        </div>
       

    </section>

