<body>
    <nav class="navbar">

       
        <div class="nav-container">
            <div class="logo">
              <a href="/"> <img height="70px" width="127px" src="/images/logo.jpg" alt="logo"></a> 
        </div> 
        <div class="navlist">
            <ul>
               
               
            </ul>
        </div>
           

        </div>
